<Configuration status="INFO">

  <Properties>
    <Property name="logDirectory">${sys:logDir:-var/log}</Property>
    <Property name="logFilename">${sys:logFile:-TIC2WebSocket}</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%msg%n" />
      <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
    </Console>
    <Console name="ConsoleError" target="SYSTEM_ERR">
      <PatternLayout pattern="%msg%n" />
    </Console>
    <RollingFile name="ApplicationLog" fileName="${logDirectory}/${logFilename}.log.zip" filePattern="${logDirectory}/${logFilename}-%i.log.zip">
      <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss.SSS} %-5level %logger{36}(%L) - %msg%n" />
      <Policies>
        <SizeBasedTriggeringPolicy size="100 MB" />
      </Policies>
      <DefaultRolloverStrategy max="10" compressionLevel="9" />
    </RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="tic" level="trace" additivity="false">
      <AppenderRef ref="ApplicationLog" level="error" />
      <AppenderRef ref="Console" level="error" />
      <AppenderRef ref="ConsoleError" level="error" />
    </Logger>
    <Root level="error">
      <AppenderRef ref="ConsoleError" />
    </Root>
  </Loggers>

</Configuration>
